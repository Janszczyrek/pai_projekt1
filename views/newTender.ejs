<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head', {title: "New Tender"}) %>
</head>
<body>
    <%- include('partials/navbar') %>

    <h1>New Tender</h1>
    <form action="/tenders/new" method="POST">
        <label for="name">Title:</label>
        <input type="text" id="name" name="name" required>

        <label for="orderer">Orderer:</label>
        <input type="text" id="orderer" name="orderer" required>

        <label for="max_price">Max Price:</label>
        <input type="number" id="max_price" name="max_price" min="1" required>

        <label for="description">Description:</label>
        <textarea id="description" name="description" required></textarea>

        <label for="start_time">Start Date:</label>
        <input type="datetime-local" id="start_time" name="start_time" step="1" required>

        <label for="end_time">End Date:</label>
        <input type="datetime-local" id="end_time" name="end_time" step="1" required>

        <button type="submit">Create Tender</button>
    </form>
</body>
</html>